{
  "name": "datenguide",
  "version": "1.0.0",
  "description": "Datenguide is your guide to understanding and using German official statistics. We work on an easy-to-use data portal and on learning materials around data published by the German statistics offices.",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "next src",
    "build": "next build src",
    "start": "next start src",
    "test": "healthier && prettier --check 'src/**/*.{js,json,css}'",
    "format": "prettier --write 'src/**/*.{js,json,css,yml}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datenguide/datenguide.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/datenguide/datenguide/issues"
  },
  "homepage": "https://github.com/datenguide/datenguide#readme",
  "dependencies": {
    "@material-ui/core": "^4.5.0",
    "@material-ui/icons": "^4.4.3",
    "@mdx-js/mdx": "^1.5.0",
    "@sindresorhus/slugify": "^0.9.1",
    "@zeit/next-mdx": "^1.2.0",
    "graphql-hooks": "^4.0.0",
    "graphql-hooks-memcache": "^1.2.2",
    "graphql-hooks-ssr": "^1.1.3",
    "gray-matter": "^4.0.2",
    "isomorphic-unfetch": "^3.0.0",
    "next": "^9.0.7",
    "next-fonts": "^0.18.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "stringify-object": "^3.3.0",
    "typeface-ibm-plex-sans": "^0.0.75"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.2.1",
    "eslint-config-healthier": "^3.0.0",
    "eslint-config-standard": "^14.0.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.1",
    "healthier": "^3.0.0",
    "install": "^0.13.0",
    "next-images": "^1.2.0",
    "npm": "^6.11.3",
    "prettier": "^1.18.2",
    "standard": "^14.3.1",
    "webpack": "^4.41.0"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": false
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "rules": {
      "react/prop-types": 0,
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "extends": [
      "standard-react"
    ]
  }
}
